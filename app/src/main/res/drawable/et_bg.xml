<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false">
        <shape
            android:shape="rectangle">

            <corners
                android:radius="10dp"/>
            <solid
                android:color="#20FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#fff"
                />

        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">

            <corners
                android:radius="10dp"/>
            <solid
                android:color="#7EFFFFFF"/>
            <stroke
                android:width="1.5dp"
                android:color="#58B5FF"
                />

        </shape>
    </item>


</selector>